package compititive;
import java.util.Scanner;

public class ToMakeAllElementsEqual {

    //given an integer array A of size n, in one second you can increase the value of one element by one
// find the minimum time in seconds to make all the elements of the array equal..
//    Array is >> {2, 4, 1, 3}  >> output is 6..

//    OBSERVATIONS >>
//     make all elements equal to the maximum element in the array ..
//    find maximum element in array..
//    for every element, calculate how much it needs to be increased to reach the maximum..
//    sum of those differences..


    static int Time(int [] arr){
        int time=0;
        int max=Integer.MIN_VALUE;
        for(int i=0;i<arr.length;i++){
            if(arr[i]>max){
                max=arr[i];
            }
        }
        for(int i=0;i<arr.length;i++){
            time+=max-arr[i];
        }
        return time;
    }

   public static void main(String[] args) {
       Scanner sc = new Scanner(System.in);
       System.out.println("Enter size of the Array : ");
       int n=sc.nextInt();
       int [] arr= new int[n];
       System.out.println("Array input : ");
       for(int i=0;i<n;i++){
           arr[i]=sc.nextInt();
       }
       int ans =Time(arr);
       System.out.print("Minimum time is : " + ans);

    }
}
